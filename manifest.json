{
  "manifest_version": 3,
  "name": "NO STORIES",
  "version": "1.0.0",
  "description": "Remove Stories from Facebook and Instagram to keep your feed clean and distraction-free.",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://facebook.com/*",
        "https://www.instagram.com/*",
        "https://instagram.com/*"
      ],
      "js": [
        "content/modules/facebook.js",
        "content/modules/instagram.js",
        "content/main.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
