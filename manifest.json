{
  "manifest_version": 3,
  "name": "NO STORIES",
  "version": "1.0.0",
  "description": "Remove Stories from Facebook and Instagram to keep your feed clean and distraction-free.",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "src/modules/popup/popup.html",
    "default_icon": {
      "48": "public/icons/icon48.png",
      "128": "public/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://facebook.com/*",
        "https://www.instagram.com/*",
        "https://instagram.com/*"
      ],
      "js": [
        "src/utils/utils.js",
        "src/modules/facebook/facebook.js",
        "src/modules/instagram/instagram.js",
        "src/main.js"
      ],
      "css": [
        "src/modules/facebook/facebook.css",
        "src/modules/instagram/instagram.css"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  }
}
